<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-center" style="width: 10%">Done</th>
            <th>To do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Todos)
        {
            <TodoItem Text="@todo.Text" Done="@todo.Done" />
        }
    </tbody>
</table>

<NewItemEntry OnNewItem="OnNewItem" />

@code {
    [Parameter]
    public IList<TodoItemModel> Todos { get; set; }

    void OnNewItem(string newItemText)
    {
        if (Todos != null)
        {
            Todos.Add(new TodoItemModel { Text = newItemText });
            StateHasChanged();
        }
    }
}
